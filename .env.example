# ============================================
# ByteGo Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file with real credentials!

# --- S3 Storage Configuration (REQUIRED) ---
# Your S3-compatible storage endpoint (AWS S3, Cloudflare R2, MinIO, etc.)
S3_ENDPOINT=https://s3.amazonaws.com
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com  # Cloudflare R2 example

# S3 Access credentials
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here

# Bucket name where files will be stored
S3_BUCKET=your-bucket-name

# S3 ACL (Access Control List)
# Options: public-read, private, authenticated-read
# Leave empty if your storage provider does not support ACLs (e.g. Cloudflare R2, some MinIO configs)
S3_ACL=public-read

# S3 Addressing Style
# Options: auto, virtual, path
# Default: auto (recommended for most providers)
S3_ADDRESSING_STYLE=auto

# S3 Path Template
# Variables: {year}, {month}, {day}, {date}, {datetime}, {timestamp}, {timestamp_nano}
#            {originname}, {originname_without_ext}, {ext}, {randomkey8}, {randomkey16}
# Default: {year}/{month}/{day}/{originname_without_ext}-{randomkey8}{ext}
S3_PATH_TEMPLATE={year}/{month}/{day}/{originname_without_ext}-{randomkey8}{ext}

# --- CDN/Public Domain Configuration ---
# The public URL prefix for accessing uploaded files
# If not set, will fall back to S3_ENDPOINT (not recommended)
# Example: https://cdn.example.com or https://bucket-name.s3.amazonaws.com
PUBLIC_DOMAIN=https://cdn.example.com

# --- Authentication ---
# Your secret access key (64-bit recommended, e.g., sk_live_...)
# Generate with: openssl rand -hex 32
AUTH_KEY=sk_live_your_secret_key_here

# --- Application Configuration ---
# Maximum file size in MB (default: 100)
MAX_FILE_SIZE_MB=100

# Flask debug mode (NEVER set to true in production)
FLASK_DEBUG=false

# Server port (default: 8000)
PORT=8000

# --- Logging Configuration ---
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Write logs to file? (true/false)
LOG_TO_FILE=false
# Log directory (default: logs)
LOG_DIR=logs
# Max log file size in bytes (default: 10MB = 10485760)
LOG_MAX_BYTES=10485760
# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# --- Gunicorn Configuration (Production) ---
# Number of worker processes (default: CPU cores * 2 + 1)
# GUNICORN_WORKERS=4
